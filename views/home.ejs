<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fa-solid fa-address-book"></i>
            My Contacts List</h1>
        <div class="List-Container">
            <ul >
                <% for (let i of contact_list) { %>
                    <li class="contact">
                        <div class="details">
                        <p>
                            <%= i.name %>
                        </p>
                        <p>
                            <%= i.phone %>
                        </p>
                        <div class="delete-btn">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fa-solid fa-square-xmark"></i>
                            </a>
                        </div>
                    </div>

                   
                    </li>

                    <% } %>
            </ul>
        </div>

        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone" required>
            <button type="submit">Create Contact</button>
        </form>
        <script src="https://kit.fontawesome.com/790c209c07.js" crossorigin="anonymous"></script>

       <script type="text/javascript" src="/js/home.js"></script> 

    </body>
</html>